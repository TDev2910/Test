@model IEnumerable<Practice_Day2_Mobishop.Models.Product>

<div class="container mt-5">
    <h2 class="text-center mb-4">Danh Sách Sản Phẩm Của Tập Đoàn 2 Con Mèo</h2>
    <br />
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-success btn-lg">Thêm Sản Phẩm</a>
    </div>

    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Ảnh</th>
                <th scope="col">Tên Sản Phẩm</th>
                <th scope="col">Giá</th>
                <th scope="col">Bảo Hành</th>
                <th scope="col">Bộ Nhớ Trong</th>
                <th scope="col">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td><img src="@product.Image" alt="@product.Name" class="img-fluid" style="max-width: 100px; border-radius: 5px;" /></td>
                    <td>@product.Name</td>
                    <td>@string.Format("{0:0,0} đ", product.Price)</td>
                    <td>@product.Warranty</td> <!-- Thông tin bảo hành -->
                    <td>@product.Storage</td>  <!-- Thông tin bộ nhớ trong -->
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-custom">Xem</a>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-custom">Sửa</a>
                            <form asp-action="DeleteConfirmed" asp-route-id="@product.Id" method="post" class="d-inline m-0 p-0" onsubmit="return confirmDelete();">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-custom">Xóa</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete() {
        return confirm("Bạn có chắc muốn xóa sản phẩm này không?");
    }
</script>