@model Practice_Day2_Mobishop.Models.Cart

<h2>Giỏ hàng của bạn</h2>

@if (!Model.Items.Any())
{
    <p>Giỏ hàng trống.</p>
}
else
{
    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="border-bottom: 1px solid #ddd;">
                <th style="padding: 10px;">Sản phẩm</th>
                <th style="padding: 10px;">Giá</th>
                <th style="padding: 10px;">Số lượng</th>
                <th style="padding: 10px;">Thành tiền</th>
                <th style="padding: 10px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 10px;">@item.Product.Name</td>
                    <td style="padding: 10px;">@item.Product.Price.ToString("N0") đ</td>

                    <!-- Cột số lượng với nút tăng giảm -->
                    <td style="padding: 10px; text-align: center;">
                        <form method="post" action="/Cart/DecreaseQuantity" style="display: inline;">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <button type="submit" style="padding: 5px 10px; background-color: #ddd; border: none; cursor: pointer; border-radius: 5px;">−</button>
                        </form>

                        <span style="margin: 0 10px; font-weight: bold;">@item.Quantity</span>

                        <form method="post" action="/Cart/IncreaseQuantity" style="display: inline;">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <button type="submit" style="padding: 5px 10px; background-color: #28a745; color: white; border: none; cursor: pointer; border-radius: 5px;">+</button>
                        </form>
                    </td>

                    <td style="padding: 10px;">@((item.Product.Price * item.Quantity).ToString("N0")) đ</td>

                    <!-- Nút Xóa sản phẩm -->
                    <td style="padding: 10px;">
                        <form method="post" action="/Cart/RemoveItem">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <button type="submit" style="padding: 5px 10px; background-color: red; color: white; border: none; cursor: pointer; border-radius: 5px;">
                                Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3 style="text-align: right; margin-top: 20px;">Tổng tiền: @Model.TotalPrice().ToString("N0") đ</h3>

    <form method="post" action="/Cart/Checkout" style="text-align: right; margin-top: 20px;">
        <button type="submit" style="padding: 10px 20px; background-color: #28a745; color: white; border: none; cursor: pointer; border-radius: 5px; font-size: 16px;">
            Thanh toán
        </button>
    </form>
}